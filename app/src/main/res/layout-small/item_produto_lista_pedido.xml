<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp"
                android:layout_width="130dp"
                android:layout_height="140dp">
                <ImageView
                    android:id="@+id/img_produto_item_lista_pedido"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    app:strokeColor="@color/azul_dark"
                    app:strokeWidth="0.2dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    app:contentPaddingLeft="3dp"
                    app:contentPaddingRight="3dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    android:layout_gravity="center|start"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:visibility="gone"
                            android:padding="3dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:tint="@color/azul_dark"
                            android:src="@drawable/ic_baseline_verified_24" />
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:fontFamily="sans-serif-black"
                                android:textAllCaps="true"
                                android:id="@+id/text_precificacao_item_lista_pedido"
                                android:gravity="start"
                                android:textAlignment="textStart"
                                android:text="VAREJO"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/azul_dark"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                        <ImageView
                            android:visibility="gone"
                            android:layout_gravity="center|end"
                            android:padding="3dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:tint="@color/azul_dark"
                            android:src="@drawable/ic_action_ir_right" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/nome_produto_item_lista_pedido"
                    android:lines="2"
                    android:gravity="top"
                    android:textSize="12sp"
                    android:text="Nome do produto\nnome do produto"
                    android:textColor="@color/colorSecondaryLight"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_gravity="bottom"
                            android:textSize="8sp"
                            android:text="Total"
                            android:gravity="center"
                            android:textColor="@color/cinza_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/valor_total_produto_item_lista_pedido"
                            android:layout_gravity="center|start"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="R$ 100"
                            android:textColor="@color/colorSecondaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_gravity="bottom"
                            android:textSize="8sp"
                            android:text="Quant"
                            android:gravity="center"
                            android:textColor="@color/cinza_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/quantidade_produto_item_lista_pedido"
                            android:layout_gravity="center|start"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="01"
                            android:textColor="@color/colorSecondaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_gravity="bottom"
                            android:textSize="8sp"
                            android:text="Unidade"
                            android:gravity="center"
                            android:textColor="@color/cinza_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/valor_uni_produto_item_lista_pedido"
                            android:layout_gravity="center|start"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="R$ 100"
                            android:textColor="@color/colorSecondaryDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>