<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_titulo_ranking_concluido"
            android:text="Titulo:"
            android:textSize="22sp"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:id="@+id/tv_inicio_ranking_concluido"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:id="@+id/tv_fim_ranking_concluido"
                        android:layout_marginRight="8dp"
                        android:gravity="center|end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:id="@+id/tv_participantes_ranking_concluido"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:id="@+id/tv_vendas_ranking_concluido"
                        android:layout_marginRight="8dp"
                        android:gravity="center|end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:layout_margin="8dp"
                    android:gravity="center|end"
                    android:id="@+id/tv_vencedores_ranking_concluido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:elevation="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:id="@+id/premio_ranking_concluido"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>