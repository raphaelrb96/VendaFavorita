<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rankings.RankingCreator">
    <LinearLayout
        android:background="@color/colorPrimaryLight"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/voltar_criar_ranking"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:layout_gravity="end|center"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorSecondaryLight"
            android:text="Criar Ranking"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="60dp"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_titulo_ranking"
                app:errorEnabled="true"
                app:hintEnabled="true"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                style="@style/MeuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionNext"
                    android:id="@+id/et_titulo_ranking"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_premio_ranking"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                style="@style/MeuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prêmio">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionNext"
                    android:id="@+id/et_premio_ranking"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_regras_ranking"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                style="@style/MeuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Regras">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionNext"
                    android:id="@+id/et_regras_ranking"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_descricao_ranking"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                style="@style/MeuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionNext"
                    android:id="@+id/et_descricao_ranking"
                    android:gravity="top"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="140dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_meta_ranking"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                style="@style/MeuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meta de Itens Vendidos">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionNext"
                    android:id="@+id/et_meta_ranking"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_inicio_ranking"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                style="@style/MeuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inicio">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionNext"
                    android:id="@+id/et_inicio_ranking"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_vencimento_ranking"
                app:errorEnabled="true"
                app:hintEnabled="true"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                style="@style/MeuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fim">

                <com.google.android.material.textfield.TextInputEditText
                    android:imeOptions="actionNext"
                    android:id="@+id/et_vencimento_ranking"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/pb_criar_ranking"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/bt_criar_ranking"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:elevation="12dp"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <FrameLayout
            android:backgroundTint="#fff"
            android:background="@drawable/ic_save_branco_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <FrameLayout
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:text="Salvar !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>