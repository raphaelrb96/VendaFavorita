<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PainelDeAfiliados">

    <com.google.android.material.appbar.AppBarLayout
        app:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <View
                    android:backgroundTint="@color/colorSecondary"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/bt_voltar_painel_afiliados" />
                <TextView
                    android:id="@+id/tv_toolbar_painel_afiliados"
                    android:layout_marginLeft="32dp"
                    android:text="Central de Recrutamento"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="56dp"
        android:background="@color/colorLightGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/team"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/cinza_claro"
                android:layout_marginBottom="10dp"
                android:layout_height="200dp"/>


            <TextView
                android:text="Recrutamento Manual"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:textAllCaps="true"
                android:textColor="@color/colorSecondary"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_username_painel_afiliados"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="8dp"
                        app:boxCornerRadiusBottomEnd="5dp"
                        app:boxCornerRadiusBottomStart="5dp"
                        app:boxCornerRadiusTopEnd="5dp"
                        app:boxCornerRadiusTopStart="5dp"
                        style="@style/MeuEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apelido">

                        <com.google.android.material.textfield.TextInputEditText
                            android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                            android:drawablePadding="6dp"
                            android:drawableTint="@color/colorSecondaryLight"
                            android:imeOptions="actionNext"
                            android:id="@+id/et_username_add_afiliado"
                            android:textCursorDrawable="@drawable/curso_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_marginLeft="6dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp"
                            app:cardCornerRadius="10dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp">
                            <ProgressBar
                                android:layout_gravity="center"
                                android:id="@+id/pb_add_revendedor_afiliado"
                                android:layout_width="15dp"
                                android:layout_height="15dp"/>
                            <ImageView
                                android:id="@+id/info_add_revendedor_afiliado"
                                android:background="@drawable/ic_action_alert_info"
                                android:adjustViewBounds="true"
                                android:backgroundTint="@color/colorSecondaryLight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_info_card_afiliados"
                            android:layout_marginLeft="8dp"
                            android:textSize="10sp"
                            android:gravity="start"
                            android:maxLines="2"
                            android:textColor="@color/colorSecondary"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/bt_add_revendedor"
                        android:elevation="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:text="ADICIONAR REVENDEDOR"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Recrutamento AutomÃ¡tico"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:textAllCaps="true"
                android:textColor="@color/colorSecondary"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    app:cornerRadius="12dp"
                    android:id="@+id/bt_link_site_recrutamento"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorSecondary"
                    android:layout_width="0dp"
                    app:backgroundTint="@color/colorPrimaryLight"
                    android:text="Link Site"
                    android:textSize="14sp"
                    android:drawableTint="@color/colorSecondary"
                    android:drawableTop="@drawable/ic_baseline_web_24"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.button.MaterialButton
                    app:cornerRadius="12dp"
                    android:id="@+id/bt_link_app_recrutamento"
                    android:layout_marginTop="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/colorSecondary"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/colorPrimaryLight"
                    android:layout_width="0dp"
                    android:text="Link APP"
                    android:drawableTop="@drawable/ic_baseline_mobile_screen_share_24"
                    android:drawableTint="@color/colorSecondary"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:text="Meus Afiliados"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:textAllCaps="true"
                android:textColor="@color/colorSecondary"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="start|center"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/autenticado"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:gravity="center|start"
                            android:text="Vendedores Ativos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_marginRight="8dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:minWidth="40dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="0"
                            android:id="@+id/total_afiliados_autenticados"
                            android:minWidth="30dp"
                            android:maxHeight="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="start|center"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/analize"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:gravity="center|start"
                            android:text="Aguardando confirmaÃ§Ã£o"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_marginRight="8dp"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:minWidth="40dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/numero_de_analize"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:minWidth="30dp"
                            android:maxHeight="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/titulo_meus_revendedores"
                android:visibility="gone"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:text="Meus revendedores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:clipToPadding="false"
                android:paddingVertical="26dp"
                tools:listitem="@layout/item_usuario_afiliado"
                tools:itemCount="6"
                android:nestedScrollingEnabled="true"
                android:id="@+id/rv_painel_afiliados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/pb_meus_afiliados"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="80dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>