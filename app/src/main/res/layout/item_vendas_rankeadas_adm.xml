<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="170dp"
        android:layout_height="200dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:id="@+id/data_item_vendas_rankeadas_adm"
                android:layout_width="match_parent"
                android:textColor="@color/colorSecondary"
                android:maxLines="1"
                android:textStyle="italic"
                android:textSize="13sp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:id="@+id/cliente_item_vendas_rankeadas_adm"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_marginRight="8dp"
                android:textSize="14sp"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:id="@+id/bairro_item_vendas_rankeadas_adm"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textSize="12sp"
                android:layout_height="25dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:id="@+id/vendedor_item_vendas_rankeadas_adm"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="50dp" />
            <LinearLayout
                android:elevation="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="18dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/img_vendedor_item_vendas_rankeadas_adm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:id="@+id/quantidade_item_vendas_rankeadas_adm"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorSecondaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <View
                        android:background="@drawable/ic_delete_primary_secudary_25dp"
                        android:backgroundTint="@color/colorSecondary"
                        android:id="@+id/bt_delete_item_vendas_rankeadas_adm"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>