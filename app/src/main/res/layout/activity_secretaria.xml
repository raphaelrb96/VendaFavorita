<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorLightGray"
    android:layout_height="match_parent"
    tools:context=".Secretaria">

    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="40dp"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_favorita"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold|italic"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:text="Grupo Favorita"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:text="Suas informações:"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="18sp"
                android:gravity="center|top"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp"
                app:hintEnabled="true"
                app:hintTextColor="@color/colorSecondaryDark"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                style="@style/MeuEditText"
                app:hintAnimationEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Login">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_login"
                    android:imeOptions="actionDone"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp"
                app:hintEnabled="true"
                app:hintTextColor="@color/colorSecondaryDark"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                style="@style/MeuEditText"
                app:hintAnimationEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_senha"
                    android:imeOptions="actionDone"
                    android:textCursorDrawable="@drawable/curso_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:onClick="fechar"
        android:layout_margin="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="continuar"
        app:cardElevation="12dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"

            android:gravity="center"
            android:elevation="12dp"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <FrameLayout
                android:backgroundTint="#fff"
                android:background="@drawable/ic_check_black_100dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <FrameLayout
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:text="concluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>