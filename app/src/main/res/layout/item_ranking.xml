<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:gravity="start|center"
                    android:id="@+id/tv_titulo_ranking_adm"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:layout_marginRight="8dp"
                    android:gravity="center|end"
                    android:id="@+id/tv_premio_ranking_adm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:gravity="start|center"
                    android:id="@+id/tv_inicio_ranking_adm"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:id="@+id/tv_fim_ranking_adm"
                    android:layout_marginRight="8dp"
                    android:gravity="center|end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:gravity="start|center"
                    android:id="@+id/tv_participantes_ranking_adm"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:id="@+id/tv_vendas_ranking_adm"
                    android:layout_marginRight="8dp"
                    android:gravity="center|end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:text="Ver Detalhes"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:id="@+id/bt_ver_detalhes_ranking_adm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>