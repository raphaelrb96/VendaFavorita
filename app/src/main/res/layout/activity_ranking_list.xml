<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rankings.RankingListActivity">
    <LinearLayout
        android:background="@color/colorPrimaryLight"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/voltar_lista_revendas"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:layout_gravity="end|center"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorSecondaryLight"
            android:text="Rankings"
            android:gravity="center|start"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="start|center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="60dp"
        android:layout_marginTop="56dp"
        android:id="@+id/rv_ranking_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/bt_criar_ranking"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:elevation="12dp"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <FrameLayout
            android:backgroundTint="#fff"
            android:background="@drawable/ic_add_circle_outline_black_30dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <FrameLayout
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:text="Criar Ranking !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>