<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rankings.RankingDetalheAdm">
    <LinearLayout
        android:background="@color/colorPrimaryLight"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/voltar_lista_revendas"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:layout_gravity="end|center"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorSecondaryLight"
            android:text="Detalhes Ranking"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:visibility="gone"
        android:id="@+id/scrol_ranking_detalhe_adm"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="14dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:id="@+id/tv_titulo_ranking_adm_detalhe"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:textSize="22sp"
                        android:textColor="@color/colorSecondaryDark"
                        android:textStyle="bold"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_marginRight="8dp"
                        android:gravity="center|end"
                        android:id="@+id/tv_premio_ranking_adm_detalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:id="@+id/tv_inicio_ranking_adm_detalhe"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:id="@+id/tv_fim_ranking_adm_detalhe"
                        android:layout_marginRight="8dp"
                        android:gravity="center|end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:gravity="start|center"
                        android:id="@+id/tv_participantes_ranking_adm_descricao"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:text="0 vendedores"
                        android:textSize="14sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="0 vendas"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:id="@+id/tv_vendas_ranking_adm_detalhe"
                        android:layout_marginRight="8dp"
                        android:gravity="center|end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/title_rankeadas"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:text="Rankeadas"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:id="@+id/rv_rankeadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="NÃ£o contabilizadas"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:id="@+id/rv_nao_rankeadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="75dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/pb_ranking_adm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"/>
    <LinearLayout
        android:id="@+id/bt_criar_ranking"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:elevation="12dp"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <FrameLayout
            android:backgroundTint="#fff"
            android:background="@drawable/ic_save_branco_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <FrameLayout
            android:layout_width="8dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:text="Salvar !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>