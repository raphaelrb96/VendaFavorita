<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="150dp"
        android:layout_height="265dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_item_produto_principal"
                    android:layout_marginBottom="105dp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp" />

                <androidx.cardview.widget.CardView
                    android:layout_gravity="bottom"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="105dp">
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/preco_item_produto_principal"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="6dp"
                            android:textSize="14sp"
                            android:text="$5.00"
                            android:visibility="gone"
                            android:textColor="#212020"
                            android:layout_width="match_parent"
                            android:layout_height="22dp" />
                        <TextView
                            android:id="@+id/nome_produto_principal"
                            android:textColor="@color/cinza_text"
                            android:maxLines="2"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="48dp" />
                        <com.google.android.material.button.MaterialButton
                            android:text="Detalhes"
                            android:textColor="@color/cinza_text"
                            app:cornerRadius="18dp"
                            android:textSize="10sp"
                            android:id="@+id/bt_item_atalho"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="36dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:src="@drawable/ic_add_shopping_cart_black_24dp"
                    android:id="@+id/fab_produto_item"
                    app:backgroundTint="@color/fab1"
                    android:layout_marginRight="16dp"
                    app:fabSize="mini"
                    android:visibility="gone"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="bottom|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>