<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="12dp"
    android:layout_marginRight="16dp"
    app:contentPadding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="1dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_prod_revenda"
                    android:scaleType="centerCrop"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:adjustViewBounds="true"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        app:strokeColor="@color/azul_dark"
                        app:strokeWidth="0.2dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        app:contentPaddingLeft="3dp"
                        app:contentPaddingRight="3dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="14dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:visibility="gone"
                                android:padding="3dp"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:tint="@color/azul_dark"
                                android:src="@drawable/ic_baseline_verified_24" />
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:fontFamily="sans-serif-black"
                                    android:textAllCaps="true"
                                    android:id="@+id/text_bt_modelo_precificacao_item_carrinho"
                                    android:gravity="start"
                                    android:textAlignment="textStart"
                                    android:text="VAREJO"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/azul_dark"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </FrameLayout>
                            <ImageView
                                android:visibility="gone"
                                android:layout_gravity="center|end"
                                android:padding="3dp"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:tint="@color/azul_dark"
                                android:src="@drawable/ic_action_ir_right" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_gravity="center"
                            app:strokeWidth="0.1dp"
                            android:layout_marginRight="6dp"
                            app:strokeColor="@color/cinza_text"
                            app:contentPadding="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorSecondaryLight"
                                android:drawableRight="@drawable/ic_baseline_edit_24"
                                android:id="@+id/bt_editar_item_lista_revenda"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_gravity="center"
                            app:strokeWidth="0.1dp"
                            app:strokeColor="@color/cinza_text"
                            app:contentPadding="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/colorSecondaryLight"
                                android:text=""
                                android:drawableRight="@drawable/ic_delete_primary_secudary_25dp"
                                android:id="@+id/bt_remover_item_lista_revenda"
                                android:textAllCaps="true"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/container_quant_min_atacado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:padding="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:tint="@color/azul_dark"
                        android:src="@drawable/ic_baseline_info_18_blue_dark" />
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textAlignment="center"
                            android:text="Minimo: 6"
                            android:layout_marginRight="6dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/azul_dark"
                            android:textSize="10sp" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/titulo_prod_revenda"
                    android:textSize="14sp"
                    android:layout_marginRight="6dp"
                    android:textAllCaps="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/cinza_text"
                    android:lines="2"
                    android:maxHeight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/container_obs_modelo"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:padding="3dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:tint="@color/cinza_medio"
                        android:src="@drawable/ic_baseline_info_18_blue_dark" />
                    <TextView
                        android:id="@+id/tv_modelo_item_pedido"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="0dp"
                        android:layout_width="match_parent"
                        android:drawablePadding="6dp"
                        android:gravity="center|start"
                        android:layout_gravity="center"
                        android:textStyle="italic"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="10sp"
                        android:lineHeight="10dp"
                        android:textColor="@color/cinza_text"
                        android:drawableTint="@color/cinza_medio"
                        android:text="Modelo" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:layout_gravity="bottom"
                                android:textSize="8sp"
                                android:text="Total"
                                android:gravity="center"
                                android:textColor="@color/cinza_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="bottom"
                                android:id="@+id/valor_produto_detalhe_revenda"
                                android:textSize="20sp"
                                android:paddingTop="0dp"
                                android:text="R$100"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondaryLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:layout_gravity="bottom"
                                android:textSize="10sp"
                                android:text="Lucro"
                                android:gravity="center"
                                android:textColor="@color/cinza_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="bottom"
                                android:id="@+id/comissao_produto_item_lista_revenda"
                                android:textSize="20sp"
                                android:text="R$100"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondaryLight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                android:layout_gravity="center"
                                app:strokeWidth="0.1dp"
                                android:layout_marginRight="6dp"
                                app:strokeColor="@color/cinza_text"
                                app:contentPadding="3dp"
                                android:layout_width="24dp"
                                android:layout_height="24dp">
                                <View
                                    android:id="@+id/bt_diminui_prod_lista_revenda"
                                    android:background="@drawable/ic_baseline_remove_24"
                                    android:layout_gravity="center|start"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:layout_gravity="center"
                                app:strokeWidth="0.1dp"
                                android:layout_marginRight="6dp"
                                app:strokeColor="@color/cinza_text"
                                app:contentPadding="3dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp">
                                <TextView
                                    android:id="@+id/quantidade_prod_lista_revenda"
                                    android:textSize="18sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:text="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_gravity="center"
                                app:strokeWidth="0.1dp"
                                android:layout_marginRight="6dp"
                                app:strokeColor="@color/cinza_text"
                                app:contentPadding="3dp"
                                android:layout_width="24dp"
                                android:layout_height="24dp">
                                <View
                                    android:id="@+id/bt_aumentar_prod_lista_revenda"
                                    android:background="@drawable/ic_baseline_add_24"
                                    android:layout_gravity="center|end"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>







    </LinearLayout>
</com.google.android.material.card.MaterialCardView>