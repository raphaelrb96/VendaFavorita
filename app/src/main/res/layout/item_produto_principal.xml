<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:id="@+id/img_item_produto_principal"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <androidx.cardview.widget.CardView
                android:layout_gravity="bottom"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/preco_item_produto_principal"
                        android:textStyle="bold"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:text="$5.00"
                        android:textColor="#212020"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />
                    <TextView
                        android:id="@+id/nome_produto_principal"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:textColor="#6e6e6e"
                        android:lines="2"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:textAllCaps="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.button.MaterialButton
                        android:text="Detalhes"
                        android:textColor="@color/cinza_text"
                        android:textSize="12sp"
                        app:cornerRadius="22dp"
                        android:id="@+id/bt_item_novidades"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:src="@drawable/ic_add_shopping_cart_black_24dp"
                    android:id="@+id/fab_produto_item"
                    app:backgroundTint="@color/fab1"
                    android:layout_marginRight="16dp"
                    app:fabSize="mini"
                    android:visibility="gone"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="bottom|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>