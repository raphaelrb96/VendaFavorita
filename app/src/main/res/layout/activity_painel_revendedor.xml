<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PainelRevendedorActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:id="@+id/scrol_revendedor"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/minhas_comissoes_revendedor"
                    android:orientation="vertical"
                    android:layout_width="0dp"

                    android:layout_height="250dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/mymoney"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:text="Minhas comissÃµes"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center|top"
                        android:gravity="center|top"
                        android:textColor="@color/red_dark"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/meu_historico_rendededor"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1">

                    <ImageView
                        android:paddingBottom="6dp"
                        android:paddingRight="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/meuhistorico"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:text="Meu Historico"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/red_dark"
                        android:layout_gravity="center|top"
                        android:gravity="center|top"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </LinearLayout>



            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/bt_afiliados_painel_revenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/afiliadosbaner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title_rv_produtos_painel_revenda"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="22dp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryLight"
                android:textSize="26sp"
                android:text="Mais lucrativos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                android:id="@+id/rv_produtos_painel_revenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/pb_painel_revenda"
                android:layout_marginTop="28dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:background="@color/colorPrimaryLight"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/voltar_painel_revendedor"
            android:layout_marginStart="8dp"
            android:layout_marginRight="12dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:layout_gravity="end|center"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:textSize="20sp"
            android:layout_marginLeft="6dp"
            android:textStyle="bold"
            android:id="@+id/titulo_painel_revendedor"
            android:maxLines="1"
            android:text="Painel do revendedor"
            android:textColor="@color/colorSecondaryLight"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:backgroundTint="@color/colorSecondaryLight"
            android:id="@+id/bt_ranking"
            android:layout_marginRight="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center"
            android:background="@drawable/adm_analytics" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/efab_painel_revendedor"
        android:textSize="14sp"
        app:backgroundTint="@color/red"
        android:text="Lista de revenda"
        app:icon="@drawable/ic_playlist_add_minhas_compras_50dp"
        app:iconSize="24dp"
        app:iconTint="#fff"
        android:textColor="#fff"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>