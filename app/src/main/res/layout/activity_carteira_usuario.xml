<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carteira.CarteiraUsuario">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <View
                    android:layout_marginRight="12dp"
                    android:backgroundTint="@color/colorSecondaryLight"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/bt_voltar_carteira" />
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="6dp"
                    android:textStyle="bold"
                    android:text="Minhas Comissões"
                    android:textColor="@color/colorSecondaryLight"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrol_list_carteira"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/mymoney"
                android:layout_width="wrap_content"
                android:layout_height="280dp"/>

            <ProgressBar
                android:id="@+id/pb_carteira"
                android:layout_marginTop="20dp"
                android:layout_gravity="center|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/container_carteira">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/areceber"
                        android:layout_gravity="top"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp">

                        <TextView
                            android:text="Total a receber"
                            android:textStyle="bold"
                            android:textColor="@color/colorSecondaryLight"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            android:text="Comissão total disponivel para retirada"/>

                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/data_comissoes_gerais"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Desde 21/09/20"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/total_a_receber_carteira"
                                android:layout_marginRight="12dp"
                                android:text="R$ 0,00"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondaryLight"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/totalvenda"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp">

                        <TextView
                            android:text="Comissões de Vendas"
                            android:textStyle="bold"
                            android:textColor="@color/colorSecondaryLight"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/data_comissoes_vendas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="Desde 21/09/20"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/total_comissoes_vendas"
                                android:layout_marginRight="12dp"
                                android:text="R$ 0,00"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondaryLight"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/payafiliados"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100dp">

                        <TextView
                            android:text="Comissões de Afiliados"
                            android:textStyle="bold"
                            android:textColor="@color/colorSecondaryLight"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/data_comissoes_afiliados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="Desde 21/09/20"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/total_comissoes_afiliados"
                                android:layout_marginRight="12dp"
                                android:text="R$ 0,00"
                                android:textStyle="bold"
                                android:textColor="@color/colorSecondaryLight"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/title_rv_produtos_painel_revenda"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorSecondaryLight"
                    android:textSize="26sp"
                    android:text="Seus Rendimentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="110dp">

                        <androidx.cardview.widget.CardView
                            app:cardElevation="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="5dp">
                            <ImageView
                                android:background="@drawable/umdia"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorSecondaryDark"
                            android:textStyle="bold"
                            android:lines="1"
                            android:text="R$ 0,00"
                            android:id="@+id/total_do_dia"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <TextView
                            android:gravity="center|top"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="14sp"
                            android:text="1 dia"
                            android:textColor="@color/colorSecondaryDark"
                            android:lines="1"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="110dp">
                        <androidx.cardview.widget.CardView
                            app:cardElevation="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="5dp">
                            <ImageView
                                android:background="@drawable/umasemana"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorSecondaryDark"
                            android:textStyle="bold"
                            android:lines="1"
                            android:id="@+id/total_da_semana"
                            android:text="R$ 0,00"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/nome_top_vend_2"
                            android:gravity="center|top"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="14sp"
                            android:text="7 dias"
                            android:textColor="@color/colorSecondaryDark"
                            android:lines="1"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="110dp">
                        <androidx.cardview.widget.CardView
                            app:cardElevation="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="5dp">
                            <ImageView
                                android:background="@drawable/ummes"
                                android:adjustViewBounds="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorSecondaryDark"
                            android:textStyle="bold"
                            android:lines="1"
                            android:text="R$ 0,00"
                            android:id="@+id/total_do_mes"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <TextView
                            android:gravity="center|top"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textSize="14sp"
                            android:text="30 dias"
                            android:textColor="@color/colorSecondaryDark"
                            android:lines="1"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>