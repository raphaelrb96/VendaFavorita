<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    tools:context=".carteira.CarteiraUsuario">

    <com.google.android.material.appbar.AppBarLayout
        app:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <View
                    android:onClick="voltar"
                    android:backgroundTint="@color/colorSecondaryDark"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/bt_voltar_carteira" />
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_marginLeft="32dp"
                    android:text="Minha Carteira"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrol_list_carteira"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mymoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/pb_carteira"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center|top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/container_carteira">



                    <TextView
                        android:id="@+id/title_rv_produtos_painel_revenda"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorSecondaryLight"
                        android:textSize="20sp"
                        android:textAllCaps="true"
                        android:text="Seus Rendimentos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_marginTop="12dp"
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:background="@drawable/totalvenda"
                                    android:backgroundTint="@color/colorSecondary"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_width="46dp"
                                    android:layout_height="46dp"/>

                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp">

                                    <TextView
                                        android:text="Vendas"
                                        android:textColor="@color/colorSecondary"
                                        android:textSize="18sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/data_comissoes_vendas"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:textStyle="bold"
                                            android:text="Desde 21/09/20"/>
                                        <View
                                            android:visibility="gone"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"/>
                                        <TextView
                                            android:id="@+id/total_comissoes_vendas"
                                            android:layout_marginRight="12dp"
                                            android:text="R$ 0,00"
                                            android:textColor="@color/colorSecondary"
                                            android:textSize="16sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="12dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:backgroundTint="@color/colorSecondary"
                                    android:layout_gravity="center"
                                    android:background="@drawable/payafiliados"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="6dp"
                                    android:layout_width="46dp"
                                    android:layout_height="46dp"/>

                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp">

                                    <TextView
                                        android:text="Afiliação"
                                        android:textColor="@color/colorSecondary"
                                        android:textSize="18sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/data_comissoes_afiliados"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:textStyle="bold"
                                            android:text="Desde 21/09/20"/>
                                        <View
                                            android:visibility="gone"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"/>
                                        <TextView
                                            android:id="@+id/total_comissoes_afiliados"
                                            android:layout_marginRight="16dp"
                                            android:text="R$ 0,00"
                                            android:textColor="@color/colorSecondary"
                                            android:textSize="16sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>


                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_width="0dp"
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="110dp">

                                <androidx.cardview.widget.CardView
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="5dp">
                                    <ImageView
                                        android:background="@drawable/umdia"
                                        android:adjustViewBounds="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="6dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/colorSecondaryLight"
                                    android:lines="1"
                                    android:text="R$ 0,00"
                                    android:id="@+id/total_do_dia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center|top"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:textSize="12sp"
                                    android:text="1 dia"
                                    android:textColor="@color/cinza_text"
                                    android:lines="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_width="0dp"
                            app:cardCornerRadius="12dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="110dp">
                                <androidx.cardview.widget.CardView
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="5dp">
                                    <ImageView
                                        android:background="@drawable/umasemana"
                                        android:adjustViewBounds="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="6dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/colorSecondaryLight"
                                    android:lines="1"
                                    android:id="@+id/total_da_semana"
                                    android:text="R$ 0,00"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/nome_top_vend_2"
                                    android:gravity="center|top"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:textSize="12sp"
                                    android:text="7 dias"
                                    android:textColor="@color/cinza_text"
                                    android:lines="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_width="0dp"
                            app:cardCornerRadius="12dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="110dp">
                                <androidx.cardview.widget.CardView
                                    app:cardElevation="0dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="5dp">
                                    <ImageView
                                        android:background="@drawable/ummes"
                                        android:adjustViewBounds="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="6dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/colorSecondaryLight"
                                    android:lines="1"
                                    android:text="R$ 0,00"
                                    android:id="@+id/total_do_mes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:gravity="center|top"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:textSize="12sp"
                                    android:text="30 dias"
                                    android:textColor="@color/cinza_text"
                                    android:lines="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>




                    </LinearLayout>

                </LinearLayout>



            </FrameLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Saldo Disponivel"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textColor="@color/colorSecondaryLight"
                                android:textSize="13sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
                            <TextView
                                android:id="@+id/total_a_receber_carteira"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 00,00"
                                android:textAllCaps="true"
                                android:textColor="@color/colorSecondaryDark"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />
                        </LinearLayout>
                        <ImageView
                            android:background="@drawable/dinheiro_disponivel"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="22dp"
                            android:layout_marginTop="22dp"
                            android:layout_gravity="top"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_solicitar_saque_carteira"
                        android:textColor="@color/colorPrimaryLight"
                        app:strokeColor="@color/azul_dark"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp"
                        android:drawableTint="@color/colorPrimaryLight"
                        app:backgroundTint="@color/azul_dark"
                        android:paddingLeft="22dp"
                        android:textAlignment="textStart"
                        app:elevation="12dp"
                        android:drawableRight="@drawable/ic_action_ir_right"
                        android:text="Meus Pagamentos"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saldo Em Analise"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/colorSecondaryLight"
                            android:textSize="13sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
                        <TextView
                            android:id="@+id/total_em_analise_carteira"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 00,00"
                            android:textAllCaps="true"
                            android:textColor="@color/colorSecondaryDark"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />
                    </LinearLayout>
                    <ImageView
                        android:background="@drawable/dinheiro_em_analise"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="22dp"
                        android:layout_gravity="top"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>