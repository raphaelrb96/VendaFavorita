<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdutoRevendaActivity">

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_produto_revenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/conteudo_produto_revenda"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <LinearLayout
                android:background="@color/colorLightGray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="16dp"
                    app:contentPaddingBottom="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_marginRight="26dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="26dp"
                        android:layout_gravity="center"
                        android:layout_width="250dp"
                        android:layout_height="250dp">
                        <ImageView
                            android:background="@drawable/produto_empty"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/img_capa_prod_revenda_detalhe"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="360dp" />
                </com.google.android.material.card.MaterialCardView>




                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_detalhe_prod_revenda_nome"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:fontFamily="sans-serif-black"
                        android:text="Multimetro digital"
                        android:layout_gravity="start"
                        android:textAllCaps="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/colorSecondary"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_marginLeft="16dp"
                        android:progressTint="@color/amarelo"
                        android:secondaryProgressTint="@color/amarelo"
                        android:isIndicator="true"
                        android:rating="4.5"
                        android:stepSize=".5"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/valor_dinheiro_produto_detalhe_revenda"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="R$ xx,xx"
                        android:gravity="top"
                        android:layout_gravity="start|top"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/colorSecondaryDark"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/aviso_frete_produto"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="match_parent"
                        android:drawablePadding="6dp"
                        android:gravity="center|start"
                        android:layout_gravity="top"
                        android:textStyle="italic"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:textSize="12sp"
                        android:lineHeight="12dp"
                        android:textColor="@color/cinza_text"
                        android:drawableTint="@color/cinza_medio"
                        android:drawableLeft="@drawable/ic_baseline_info_18_blue_dark"
                        android:text="Taxa de Entrega não está incluida no preço" />

                    <TextView
                        android:text="Simulação do parcelamento"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="16dp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSecondary"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.recyclerview.widget.RecyclerView
                        tools:listitem="@layout/item_parcelamento"
                        tools:itemCount="1"
                        android:clipToPadding="false"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:id="@+id/rv_parcelamento_detalhes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:text="Valor à vista"
                                    android:textSize="12sp"
                                    android:visibility="gone"
                                    android:layout_marginTop="6dp"
                                    android:textColor="@color/cinza_text"
                                    android:layout_gravity="start"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:text="Valor no cartão"
                                    android:textSize="12sp"
                                    android:layout_marginTop="6dp"
                                    android:textColor="@color/cinza_text"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/valor_cartao_produto_detalhe_revenda"
                                    android:textStyle="bold"
                                    android:textSize="24sp"
                                    android:text="R$ xx,xx"
                                    android:layout_marginEnd="20dp"
                                    android:textColor="@color/colorSecondary"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:text="Comissão"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/cinza_text"
                            android:layout_gravity="start"
                            android:layout_marginBottom="2dp"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/comissao_produto_detalhe_revenda"
                            android:textStyle="bold"
                            android:textSize="26sp"
                            android:text="R$ xx,xx"
                            android:layout_gravity="start"
                            android:layout_marginEnd="20dp"
                            android:textColor="@color/colorSecondary"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_variantes_produto_revenda"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Variantes do Produto"
                        android:id="@+id/titulo_cores_produto_revenda"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="16dp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSecondary"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:clipToPadding="false"
                        android:layout_gravity="center"
                        android:id="@+id/rv_cores_produto_revenda"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_cores_produto_revenda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <TextView
                    android:text="Imagens do Produto"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    tools:listitem="@layout/item_foto_detalhes"
                    tools:itemCount="1"
                    android:clipToPadding="false"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/rv_fotos_detalhes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <TextView
                    android:text="Descrição do Produto"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_detalhe_prod_revenda_descricao"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_gravity="center|start"
                    android:gravity="start"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/cinza_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Descrição"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/colorSecondary"
                    android:layout_gravity="start"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Mais opções para continuar"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:clipToPadding="false"
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bt_link_site"
                            app:iconSize="36dp"
                            app:iconGravity="top"
                            app:icon="@drawable/ic_outline_screen_share_24"
                            app:iconTint="@color/colorSecondaryLight"
                            app:cornerRadius="12dp"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorSecondaryLight"
                            android:textAllCaps="true"
                            android:lines="2"
                            android:textSize="12sp"
                            android:text="Enviar Link do site"
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bt_link_app"
                            app:iconSize="36dp"
                            app:iconGravity="top"
                            app:icon="@drawable/ic_baseline_mobile_screen_share_24"
                            app:iconTint="@color/colorSecondaryLight"
                            app:cornerRadius="12dp"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorSecondaryLight"
                            android:textAllCaps="true"
                            android:lines="2"
                            android:textSize="12sp"
                            android:text="Enviar Link do App"
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:onClick="copiarDetalhes"
                            app:iconSize="36dp"
                            app:iconGravity="top"
                            app:icon="@drawable/ic_outline_text_snippet_24"
                            app:iconTint="@color/colorSecondaryLight"
                            app:cornerRadius="12dp"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorSecondaryLight"
                            android:textAllCaps="true"
                            android:lines="2"
                            android:textSize="12sp"
                            android:text="Copiar Detalhes"
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:onClick="copiarValores"
                            app:iconSize="36dp"
                            app:iconGravity="top"
                            app:icon="@drawable/ic_outline_informacoes_24"
                            app:iconTint="@color/colorSecondaryLight"
                            app:cornerRadius="12dp"
                            android:gravity="center|bottom"
                            android:textColor="@color/colorSecondaryLight"
                            android:textAllCaps="true"
                            android:lines="2"
                            android:textSize="12sp"
                            android:text="Copiar Valores"
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />


                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/container_ad_prod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_gravity="start"
                        android:text="Anuncio Patrocinado"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="16dp"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSecondary"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView_produto"
                        android:layout_gravity="center"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        ads:adSize="SMART_BANNER"
                        ads:adUnitId="ca-app-pub-8108209584809121/5506056047"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp" />

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>



    </LinearLayout>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:backgroundTint="@color/colorPrimaryLight"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-16dp"
        android:gravity="center"
        app:elevation="12dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:visibility="gone"
                    app:strokeColor="@color/azul_dark"
                    app:strokeWidth="1dp"
                    app:contentPaddingLeft="8dp"
                    app:contentPaddingRight="8dp"
                    app:contentPaddingTop="8dp"
                    app:contentPaddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    app:cardBackgroundColor="@color/colorPrimaryLight"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_remove_circle_outline_black_30dp"
                        android:backgroundTint="@color/azul_dark" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    app:strokeColor="@color/azul_dark"
                    app:strokeWidth="1dp"
                    app:contentPaddingLeft="8dp"
                    app:contentPaddingRight="8dp"
                    app:contentPaddingTop="8dp"
                    app:contentPaddingBottom="8dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    app:cardBackgroundColor="@color/colorPrimaryLight"
                    app:cardCornerRadius="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:padding="3dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="@color/azul_dark"
                            android:src="@drawable/ic_baseline_monetization_on_24" />
                        <com.robinhood.ticker.TickerView
                            android:id="@+id/tv_valor_variante_produto"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            app:ticker_animationDuration="500"
                            app:ticker_defaultCharacterList="alphabet"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:paddingBottom="2dp"
                            android:text="R$100"
                            android:textColor="@color/azul_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:visibility="gone"
                    app:strokeColor="@color/azul_dark"
                    app:strokeWidth="1dp"
                    app:contentPaddingLeft="8dp"
                    app:contentPaddingRight="8dp"
                    app:contentPaddingTop="8dp"
                    app:contentPaddingBottom="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorPrimaryLight"
                    app:cardCornerRadius="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_add_circle_outline_black_30dp"
                        android:backgroundTint="@color/azul_dark" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="16dp"
                android:paddingLeft="6dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/efab_prod_detalhe_revenda"
                    app:backgroundTint="@color/azul_dark"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    app:elevation="12dp"
                    android:layout_gravity="center|end"
                    android:text="fazer pedido"
                    app:icon="@drawable/ic_action_ir_right"
                    app:iconGravity="end"
                    android:layout_width="match_parent"
                    app:cornerRadius="12dp"
                    android:layout_height="60dp" />
            </FrameLayout>





        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>



    <TextView
        android:id="@+id/indisponivel_produto_detalhe_revenda"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="INDISPONIVEL"
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        android:textColor="@color/red"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <com.google.android.material.appbar.AppBarLayout
        app:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageButton
                style="@style/Widget.AppCompat.ButtonBar"
                android:onClick="fecha"
                android:backgroundTint="@color/colorSecondary"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    app:contentPaddingLeft="3dp"
                    app:contentPaddingRight="3dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="19dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:minWidth="70dp"
                    android:layout_height="38dp">
