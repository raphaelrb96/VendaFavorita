<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProdutoRevendaActivity">

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_produto_revenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/conteudo_produto_revenda"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_capa_prod_revenda_detalhe"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="450dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fotos_detalhes"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/tv_detalhe_prod_revenda_nome"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Multimetro digital"
                android:layout_gravity="start"
                android:textAllCaps="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorSecondary"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Comissão"
                android:textSize="12sp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="start"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/comissao_produto_detalhe_revenda"
                android:textStyle="bold"
                android:textSize="26sp"
                android:text="R$ xx,xx"
                android:layout_gravity="start"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorSecondary"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="Valor à vista"
                        android:textSize="12sp"
                        android:layout_marginTop="24dp"
                        android:textColor="@color/colorSecondary"
                        android:layout_gravity="start"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/valor_dinheiro_produto_detalhe_revenda"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="R$ xx,xx"
                        android:layout_gravity="start"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/colorSecondary"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="Valor no cartão"
                        android:textSize="12sp"
                        android:layout_marginTop="24dp"
                        android:textColor="@color/colorSecondary"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/valor_cartao_produto_detalhe_revenda"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:text="R$ xx,xx"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/colorSecondary"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:text="Descrição"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="start"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detalhe_prod_revenda_descricao"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="center|start"
                android:gravity="start"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="140dp"
                android:textColor="@color/colorSecondaryLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/container_variantes_produto_revenda"
                android:background="@color/red"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp">
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/titulo_cores_produto_revenda"
                            android:layout_gravity="center"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="18sp"
                            android:text="Cores:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingStart="4dp"
                            android:layout_marginBottom="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_gravity="center"
                            android:id="@+id/rv_cores_produto_revenda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <FrameLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </HorizontalScrollView>


            </FrameLayout>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/efab_prod_detalhe_revenda"
        android:background="@color/red"
        android:elevation="16dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:elevation="16dp"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <FrameLayout
                    android:backgroundTint="#fff"
                    android:background="@drawable/ic_dinheiro_black_24dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <FrameLayout
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:textAllCaps="true"
                    android:text="Revender esse produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/indisponivel_produto_detalhe_revenda"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="INDISPONIVEL"
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        android:textColor="@color/red"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:onClick="fecha"
        android:alpha="0.5"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_margin="12dp"
        app:backgroundTint="#fff"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>